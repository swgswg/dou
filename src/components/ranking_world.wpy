// 历史排名--世界
<template>
    <view class="ranking-world">
        <view class="ranking-empty" style="height:{{774*px2rpxHeight}}px;">
            <block wx:if="{{!is_empty}}">
                <!--前三名 start-->
                <view class="first-three">
                    <block wx:for="{{first_three}}" wx:for-item="first_three" wx:key="{{index}}">
                        <view class="first-three-each">
                            <view class="first-three-img" style="width:{{124*px2rpxWidth}}px;height:{{154*px2rpxWidth}}px;">
                                <block wx:if="{{first_three.rownum == 2}}">
                                    <image class="first-three-img2"
                                           style="width:{{108*px2rpxWidth}}px;height:{{115*px2rpxWidth}}px;"
                                           src="{{history_no2}}">
                                    </image>
                                    <image class="first-three-profile no2-profile"
                                           style="bottom:{{6*px2rpxWidth}}px;left:{{22*px2rpxWidth}}px;width:{{84*px2rpxWidth}}px;height:{{84*px2rpxWidth}}px;"
                                           src="{{first_three.photo}}" data-userid="{{first_three.userId}}"
                                           @tap.stop="seeOtherGiftWall">
                                    </image>
                                </block>
                                <block wx:elif="{{first_three.rownum == 1}}">
                                    <image class="first-three-img1"
                                           style="width:{{124*px2rpxWidth}}px;height:{{154*px2rpxWidth}}px;"
                                           src="{{history_no1}}">
                                    </image>
                                    <image class="first-three-profile no1-profile"
                                           style="bottom:{{6*px2rpxWidth}}px;left:{{6*px2rpxWidth}}px;width:{{108*px2rpxWidth}}px;height:{{108*px2rpxWidth}}px;"
                                           src="{{first_three.photo}}" data-userid="{{first_three.userId}}"
                                           @tap.stop="seeOtherGiftWall">
                                    </image>
                                </block>
                                <block wx:elif="{{first_three.rownum == 3}}">
                                    <image class="first-three-img3"
                                           style="width:{{108*px2rpxWidth}}px;height:{{115*px2rpxWidth}}px;"
                                           src="{{history_no3}}">
                                    </image>
                                    <image class="first-three-profile no3-profile"
                                           style="bottom:{{6*px2rpxWidth}}px;left:{{14*px2rpxWidth}}px;width:{{84*px2rpxWidth}}px;height:{{84*px2rpxWidth}}px;"
                                           src="{{first_three.photo}}" data-userid="{{first_three.userId}}"
                                           @tap.stop="seeOtherGiftWall">
                                    </image>
                                </block>
                            </view>
                            <view class="first-three-name" style="width:{{180*px2rpxWidth}}px;">{{first_three.name}}</view>
                            <view class="first-three-time" style="width:{{180*px2rpxWidth}}px;margin-top:{{5*px2rpxHeight}}px;">{{first_three.time}}</view>
                            <view class="first-three-number" style="margin-top:{{10*px2rpxHeight}}px;">{{first_three.shakeNum}}</view>
                        </view>
                    </block>
                </view>
                <!--前三名 end-->

                <!--其余排名 start-->
                <view class="remain" style="height:{{450*px2rpxHeight}}px">
                    <scroll-view scroll-y bindscrolltolower="scrollToLower" >
                        <ranking :ranking.sync="worldRanking"></ranking>
                        <!--加载更多时动画-->
                        <bottomLoadMore :show.sync="showLoading" message="正在加载"></bottomLoadMore>
                    </scroll-view>
                </view>
                <!--其余排名 end-->
            </block>
            <block wx:else>
                <!--暂无数据显示-->
                <placeholder :show.sync="is_empty" message="暂无数据"></placeholder>
            </block>
        </view>
        <!--自己排名-->
        <block wx:if="{{myWorldRanking}}">
            <view class="self-ranking" style="height:{{97*px2rpxHeight}}px;">
                <view class="sort" style="width:{{90*px2rpxWidth}}px;height:{{97*px2rpxWidth}}px;">{{myWorldRanking.rownum}}</view>
                <image class="img" style="width:{{60*px2rpxWidth}}px;height:{{60*px2rpxWidth}}px;" src="{{myWorldRanking.photo}}"></image>
                <view class="w100" style="width:{{100*px2rpxWidth}}px;margin-left:{{30*px2rpxWidth}}px">{{myWorldRanking.name}}</view>
                <view class="w150" style="width:{{150*px2rpxWidth}}px;margin-left:{{30*px2rpxWidth}}px">{{myWorldRanking.time}}</view>
                <view class="w150" style="width:{{150*px2rpxWidth}}px;margin-left:{{30*px2rpxWidth}}px">{{myWorldRanking.shakeNum}}</view>
            </view>
        </block>
    </view>
</template>

<script>
    import wepy from 'wepy';
    import api from '@/utils/api';
    import imgApi from '@/utils/imgApi';
    import util from '@/utils/util';
    import {USER_INFO,PX_TO_RPX} from '@/utils/constant';
    import Ranking from '@/components/ranking';
    import BottomLoadMore from "@/components/common/bottomLoadMore";
    import Placeholder from "@/components/common/placeholder";


    export default class RankingWorld extends wepy.component {

        components = {
            ranking:Ranking,
            bottomLoadMore: BottomLoadMore,
            placeholder: Placeholder
        };

        data = {
            px2rpxWidth:0,
            px2rpxHeight:0,
            history_no1:imgApi.history_no1,
            history_no2:imgApi.history_no2,
            history_no3:imgApi.history_no3,
            //是否没有数据
            is_empty: false,
            //是否显示 底部loading
            showLoading: false,
            page:1,
            pageSize:6,
            userId:null,
        };

        props = {
            // 前三名数据
            first_three:{
                type:Object,
                default:null,
                twoWay:true
            },
            // 剩下数据
            worldRanking:{
                type:Object,
                default:null,
                twoWay:true
            },
            // 个人世界排行数据
            myWorldRanking:{
                type:Object,
                default:null,
                twoWay:true
            },

            // 设备榜/手动榜
            status:{
                type:String,
                // 1脚,0手
                default:'1',
                twoWay:true
            },
            // 周/总排行
            weekOrAll:{
                type:String,
                // 1周,0总
                default:1,
                twoWay:true
            },
        };

        async onLoad(){
            let px2rpx = await wepy.getStorageSync(PX_TO_RPX);
            this.px2rpxWidth = px2rpx.px2rpxWidth;
            this.px2rpxHeight = px2rpx.px2rpxHeight;

            let userInfo = wepy.getStorageSync(USER_INFO);
            this.userId = userInfo.id;
            this.$apply();
        }

        methods = {
            // 查看其他人的礼物墙
            seeOtherGiftWall(e){
                let otherUserId = e.currentTarget.dataset.userid;
                if(otherUserId == this.userId){
                    return;
                }
                wepy.navigateTo({
                    url: '/pages/friend_gift_wall?userId='+otherUserId
                })
            },

            // 滚动到底部/右边，会触发 scrolltolower 事件
            scrollToLower(){
                // console.log(weekOrAll);
                this.showLoading = true;
                let page = this.page;
                let pageSize = this.pageSize + 1;
                this.pageSize = pageSize;
                let weekOrAll = this.weekOrAll;
                let status = this.status;
                this.getWorldRanking(page,pageSize,weekOrAll,status);
                this.$apply();
            },


        };

        // 世界排行榜
        async getWorldRanking(mypage,mypageSize,mytype,mystatus){
            let userInfo = wepy.getStorageSync(USER_INFO);
            let user_id = userInfo.id;

            // 个人数据
            let myWorldRanking = null;
            let myres= await api.myWorldRankings({
                query:{
                    userId:user_id,
                    type:mytype,
                    status:mystatus
                }
            });
            if(util.isEmpty(myres.data.data.name)){
                // 如果没有这个人的排名
                myWorldRanking = null;
            } else {
                myWorldRanking = myres.data.data;
            }
            this.myWorldRanking = myWorldRanking;
            this.$apply();

            // 排行数据
            let res = await api.worldRankings({
                query:{
                    page:mypage,
                    pageSize:mypageSize,
                    type:mytype, //周排行榜为1,总排行榜为空
                    status:mystatus,// 0手,1脚
                }
            });
            if(res.data.state == 1){
                let worldRankingData = res.data.data.PageInfo.list;
                if(worldRankingData.length < 1){
                    // 没有数据
                    this.is_empty = true;
                    this.showLoading = false;
                    this.$apply();
                    return;
                }
                this.is_empty = false;
                // 拿出前三名
                let first_three = [];
                first_three.push(worldRankingData[1]);
                first_three.push(worldRankingData[0]);
                first_three.push(worldRankingData[2]);
                // console.log(first_three);
                // 删除原数据的前三名
                worldRankingData.splice(0,1);
                worldRankingData.splice(0,1);
                worldRankingData.splice(0,1);

                this.first_three = first_three;
                this.worldRanking = worldRankingData;
                this.$apply();
            } else {
                this.is_empty = true;
                this.showLoading = false;
                this.$apply();
            }


        }



    }
</script>

